{
  "manifest_version": 3,
  "name": "Silent Voice",
  "version": "1.0",
  "description": "Display a dashboard of visited sites filtered by time.",
  "permissions": ["activeTab", "contextMenus", "sidePanel"],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icon/icon.jpeg"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*", "<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"]
    }
  ],
  "side_panel": {
    "default_path": "panel/panel.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "pages/dashboard/dashboard.html",
        "pages/dashboard/dashboard.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
